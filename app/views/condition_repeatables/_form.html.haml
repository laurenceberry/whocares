= form_for @condition_repeatable do |f|
  - if @condition_basic_repeatable.errors.any?
    #error_explanation
      %h2= "#{pluralize(@condition_repeatable.errors.count, "error")} prohibited this condition_repeatable from being saved:"
      %ul
        - @condition_basic_repeatable.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :condition
    = f.text_field :condition
  .actions
    = f.submit 'Save'
