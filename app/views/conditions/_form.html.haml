= form_for @condition do |f|
  - if @condition.errors.any?
    #error_explanation
      %h2
        = pluralize(@condition.errors.count, "error")
        prohibited
        this condition from being saved:
      %ul
        - @condition.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.submit
